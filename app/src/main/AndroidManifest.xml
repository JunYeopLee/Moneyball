<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junyeop_imaciislab.moneyball"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- For Facebook SDK -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" /> <!-- For Facebook SDK -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- For Google plus SDK -->


        <!-- For Facebook SDK -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".Moneyball.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".Moneyball.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".Moneyball.ForgetPwdActivity"
            android:label="@string/title_activity_forget_pwd" >
        </activity>
        <activity
            android:name=".Moneyball.ScorePredictionActivity"
            android:label="@string/title_activity_score_prediction" >
        </activity>
        <activity
            android:name=".Moneyball.BettingCalculatorActivity"
            android:label="@string/title_activity_betting_calculator"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".Moneyball.BettingMoneyballActivity"
            android:label="@string/title_activity_betting_moneyball" >
        </activity>
        <activity
            android:name=".Moneyball.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Moneyball.Twitter_WebViewActivity"
            android:label="@string/title_activity_twitter__web_view"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".Moneyball.BuyingMoneyballActivity"
            android:label="@string/title_activity_buying_moneyball"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".Moneyball.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".Moneyball.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
