<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junyeop_imaciislab.moneyball"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/> <!--For Facebook SDK-->

        <activity
            android:name=".Moneyball.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Moneyball.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Moneyball.SigninActivity" >
        </activity>
        <activity
            android:name=".Moneyball.ForgetPwdActivity"
            android:label="@string/title_activity_forget_pwd" >
        </activity>

        <!--For Facebook SDK-->
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/> <!--For Facebook SDK-->


</manifest>
