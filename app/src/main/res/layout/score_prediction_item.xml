<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@android:color/background_dark">

        <TextView
            android:id="@+id/tv_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodger Stadium"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tv_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="40dp"
            android:text="19:05" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/team1_logo"
            android:background="@drawable/samsung_logo"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:background="@drawable/versus_image"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/team2_logo"
            android:background="@drawable/lotte_logo"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:id="@+id/btn_wish_plus"
            android:background="@drawable/wish_plus"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp">

        <TextView
            android:id="@+id/tv_1result"
            android:text="10 : 3"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_2result"
            android:text="5 : 2"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@android:color/darker_gray"
            android:gravity="center"/>

        <Button
            android:background="@drawable/lockred"
            android:id="@+id/btn_3result"
            android:layout_width="65dp"
            android:layout_height="fill_parent" />

        <Button
            android:background="@drawable/lockred"
            android:id="@+id/btn_4result"
            android:layout_width="65dp"
            android:layout_height="fill_parent" />
        <Button
            android:background="@drawable/lockred"
            android:id="@+id/btn_5result"
            android:layout_width="65dp"
            android:layout_height="fill_parent" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp">

        <Button
            android:text="10%"
            android:id="@+id/btn_1prob"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>
        <Button
            android:text="15%"
            android:id="@+id/btn_2prob"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>


        <Button
            android:text="20%"
            android:id="@+id/btn_3prob"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>

        <Button
            android:text="25%"
            android:id="@+id/btn_4prob"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>

        <Button
            android:text="30%"
            android:id="@+id/btn_5prob"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"/>

    </LinearLayout>

</LinearLayout>
